<!-- Below code uses bootstrap SB Admin 2 admin theme -->
<%= form_with(model: order_in, local: true) do |form| %>

    <div id="page-wrapper">
    	<div class="row">
    		<div class="col-lg-12">
    			<h1 class="page-header">Incoming materials</h1>
    		</div>
    	</div>
    	<div class="row">
    		<div class="col-lg-12">
    		    <div class="panel panel-primary">
        			<div class="panel-heading">
        				Create new Order
        			</div>
        			<div class="panel-body">
					    <form role="form">
                        	<div class="form-group col-sm-6">
                        	  <%= form.label :product_name %>
                        	  <%= collection_select :order_in, :product_id, Product.all, :id, :product_name, { :prompt => "Select" }, { "style" => "width: 100%; height: 34px; padding: 6px 12px; border: 1px solid #ccc; background-color: #fff; color: #555; border-radius: 4px; box-shadow: inset 0 1px 1px rgba(0,0,0,.075);", required: true } %>
                        	</div>
                        	<div class="form-group col-sm-6">
                          	  <%= form.label :source_name %>
                          	  <%= collection_select :order_in, :source_id, Source.all, :id, :source_name, { :prompt => "Select" }, { "style" => "width: 100%; height: 34px; padding: 6px 12px; border: 1px solid #ccc; background-color: #fff; color: #555; border-radius: 4px; box-shadow: inset 0 1px 1px rgba(0,0,0,.075);", required: true } %>
                        	</div>
                        	
                        	<div class="form-group col-sm-6">
                        		<%= form.label :order_date %></br>
                        		<%= form.date_select :order_date, class: 'form-control', id: :order_in_order_date %>
                        	</div>
                        	<div class="form-group col-sm-6">
                        		<%= form.label :expected_out_date %></br>
                        		<%= form.date_select :expected_out_date, class: 'form-control', id: :order_in_expected_out_date %>
                        	</div>
                        	
                        	<div class="form-group col-sm-6">
                        		<%= form.label :purchase_price %>
                        		<%= form.text_field :purchase_price, class: 'form-control', id: :order_in_purchase_price, required: true  %>
                        	</div>
                        	<div class="form-group col-sm-6">
                        		<%= form.label :sale_price %>
                        		<%= form.text_field :sale_price, class: 'form-control', id: :order_in_sale_price, required: true  %>
                        	</div>
                        	<div class="form-group col-sm-6">
                            <%= form.label :product_quantity %>
                            <%= form.number_field :product_quantity, class: 'form-control', id: :order_in_product_quantity, required: true %>
                          </div>
                        <%= form.hidden_field :company_id, id: :company_id, value: "#{current_user.company_id.to_i}" %>
                        </form> 
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-md-10"></div>
                            <div class="col-md-2">
                                <%= link_to 'Back', order_ins_path, class: 'btn btn-outline btn-default' %>
                                <button class="btn btn-outline btn-primary" type="submit">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
<% end %>