<div id="page-wrapper">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Incoming materials</h1>
		</div>
	</div>
	<% if user_signed_in? %>
    <div class="row">
        <div class="col-md-10"></div>
        <div class="col-md-2">
            <%= link_to 'New Order In', new_order_in_path, class: 'btn btn-outline btn-primary' %>
        </div>
        <hr size="100">
    </div>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading"> Incoming Orders   </div>
				<div class="panel-body">
					<table width="100%" class="table table-striped table-bordered table-hover" id="test_example">
						<thead>
							<tr>
								<th>Product</th>
								<th>Company</th>
								<th>Source</th>
								<th>Order date</th>
								<th>Expected out date</th>
								<th>Product quantity</th>
								<th>Purchase price</th>
								<th>Sale price</th>
								<th colspan="2" style="text-align:center">Actions</th>
							</tr>
						</thead>
						<tbody>
						  <% @order_ins.where("company_id = #{current_user.company_id.to_i}").each do |order_in|  %>
							<tr class="odd gradeX">
								<td><%= order_in.product.product_name %></td> 
								<td><%= order_in.company.company_name %></td>
								<td><%= order_in.source.source_name %></td>
								<td><%= order_in.order_date %></td>
								<td><%= order_in.expected_out_date %></td>
								<td><%= order_in.product_quantity %></td>
								<td><%= order_in.purchase_price %></td>
								<td><%= order_in.sale_price %></td>
								<td><%= link_to 'Edit', edit_order_in_path(order_in), class: 'btn btn-outline btn-primary btn-xs' %></td>
								<td><%= link_to 'Destroy', order_in, method: :delete, data: { confirm: 'Are you sure?' } %></td>
								<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
									<div class="modal-dialog" role="document">
										<div class="modal-content">
											<div class="modal-header">
												<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
													<button type="button" class="close" data-dismiss="modal" aria-label="Close">
													<span aria-hidden="true">&times;</span>
													</button>
											</div>
										<div class="modal-body">
										Pulkit
										</div>
											<div class="modal-footer">
												<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
												<button type="button" class="btn btn-primary">Save changes</button>
											</div>
										</div>
									</div>
								</div>
							</tr>
							<% end %>
						</tbody>
					</table>
				 </div>
			</div>
		</div>
	</div>
</div>
<% end %>
<script>
</script>
