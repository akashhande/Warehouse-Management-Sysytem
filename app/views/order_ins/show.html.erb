<!-- Below code uses bootstrap SB Admin 2 admin theme -->
<div id="page-wrapper">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Incoming materials</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-primary">
				<div class="panel-heading">
					Basic Form Elements
				</div>
				<div class="panel-body">
					<form role="form">
					   <div class="form-group col-sm-6">
						  <strong>Product:</strong>
						  <%= @order_in.product.product_name %>
						</div>
						
						<div class="form-group col-sm-6">
						  <strong>Company:</strong>
						  <%= @order_in.company.company_name %>
						</div>
						
						<div class="form-group col-sm-6">
						  <strong>Source:</strong>
						  <%= @order_in.source.source_name %>
						</div>
						
						<div class="form-group col-sm-6">
						  <strong>Order date:</strong>
						  <%= @order_in.order_date %>
						</div>
						
						<div class="form-group col-sm-6">
						  <strong>Expected out date:</strong>
						  <%= @order_in.expected_out_date %>
						</div>
						
						<div class="form-group col-sm-6">
						  <strong>Product quantity:</strong>
						  <%= @order_in.product_quantity %>
						</div>
						
						<div class="form-group col-sm-6">
						  <strong>Purchase price:</strong>
						  <%= @order_in.purchase_price %>
						</div>
						
						<div class="form-group col-sm-6">
						  <strong>Sale price:</strong>
						  <%= @order_in.sale_price %>
						</div>
					</form> 
				</div>
				<div class="panel-footer">
					<div class="row">
						<div class="col-md-10"></div>
						<div class="col-md-2">
							<%= link_to 'Back', order_ins_path, class: 'btn btn-outline btn-default' %>
						</div>
					</div>
				</div>
			</div>
	</div>
</div>
