<!-- Below code uses bootstrap SB Admin 2 admin theme -->
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Outgoing materials</h1>
    </div>
  </div>
   <% if user_signed_in? %> 
    <div class="row">
        <div class="col-md-10"></div>
        <div class="col-md-2">
            <%= link_to 'New Order Out', new_order_out_path, class: 'btn btn-outline btn-primary' %>
        </div>
        <hr size="100">
    </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading"> Existing Orders  </div>
        <div class="panel-body">
          <table width="100%" class="table table-striped table-bordered table-hover" id="order_ins">
            <thead>
              <tr>
                <th>Product</th>
                        <th>Company</th>
                        <th>Source</th>
                        <th>Product quantity</th>
                        <th>Customer name</th>
                        <th>Order date</th>
                        <th>Orderer name</th>
                        <th>Delivery address</th>
                        <th>Delivery address city</th>
                        <th>Delivery address country</th>
                        <th>Delivery address zip</th>
                        <th colspan="2" style="text-align:center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @order_outs.where("company_id = #{current_user.company_id.to_i}").each do |order_out| %>
              <tr class="odd gradeX">
                <td><%= order_out.product.product_name %></td>
                  <td><%= order_out.company.company_name %></td>
                  <td><%= order_out.source.source_name %></td>
                  <td><%= order_out.product_quantity %></td>
                  <td><%= order_out.customer_name %></td>
                  <td><%= order_out.order_date %></td>
                  <td><%= order_out.orderer_name %></td>
                  <td><%= order_out.delivery_address %></td>
                  <td><%= order_out.delivery_address_city %></td>
                  <td><%= order_out.delivery_address_country %></td>
                  <td><%= order_out.delivery_address_zip %></td>
                <td><%= link_to 'Edit', edit_order_out_path(order_out), class: 'btn btn-outline btn-primary btn-xs' %></td>
                <td><%= link_to 'Destroy', order_out, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                          </button>
                      </div>
                    <div class="modal-body">
                    Pulkit
                    </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                      </div>
                    </div>
                  </div>
                </div>
              </tr>
              <% end %>
            </tbody>
          </table>
         </div>
      </div>
    </div>
  </div>
</div>
<% end %>
