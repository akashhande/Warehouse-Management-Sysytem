<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Products</h1>
    </div>
  </div>
  <% if user_signed_in? %>
    <div class="row">
        <div class="col-md-10"></div>
        <div class="col-md-2">
            <%= link_to 'New Product', new_product_path, class: 'btn btn-outline btn-primary' %>
        </div>
        <hr size="100">
    </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading"> Available Products </div>
        <div class="panel-body">
          <table width="100%" class="table table-striped table-bordered table-hover" id="order_ins">
            <thead>
              <tr>
                <th>Source</th>
                <th>Category</th>
                <th>Company</th>
                <th>Product name</th>
                <th>Brand</th>
                <th>Available Quantity</th>
                <th>Purchase price</th>
                <th>Sale price</th>
                <th colspan="2" style="text-align:center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
              <tr class="odd gradeX">
                <td><%= product.source.source_name  %></td>
                <td><%= product.category.category_name %></td>
                <td><%= product.company.company_name %></td>
                <td><%= product.product_name %></td>
                <td><%= product.brand %></td>
                <td><%= product.product_quantity%></td>
                <td><%= product.purchase_price %></td>
                <td><%= product.sale_price %></td>
                <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-outline btn-primary btn-xs' %></td>
                <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                          </button>
                      </div>
                    <div class="modal-body">
                    Pulkit
                    </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                      </div>
                    </div>
                  </div>
                </div>
              </tr>
              <% end %>
            </tbody>
          </table>
         </div>
      </div>
    </div>
  </div>
</div>
<% end %>
