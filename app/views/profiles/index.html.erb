<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">User Profile</h1>
    </div>
  </div>
  <% if user_signed_in? %>
    <div class="row">
        <div class="col-md-10"></div>
        <div class="col-md-2">
            <%= link_to 'New Profile', new_profile_path, class: 'btn btn-outline btn-primary' %>
        </div>
        <hr size="100">
    </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading"> Profile Index </div>
        <div class="panel-body">
          <table width="100%" class="table table-striped table-bordered table-hover" id="order_ins">
            <thead>
              <tr>
                <th>Firstname</th>
        				<th>Lastname</th>
        				<th>Address</th>
        				<th>User</th>
        				<th colspan="2" style="text-align:center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @profiles.each do |profile| %>
                    <tr class="odd gradeX">
                      <td><%= profile.firstname %></td>
          						<td><%= profile.lastname %></td>
          						<td><%= profile.address %></td>
          						<td><%= profile.user %></td>
          						<td><%= link_to 'Edit', edit_profile_path(profile), class: 'btn btn-outline btn-primary btn-xs' %></td>
          						<td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
              <% end %>
            </tbody>
          </table>
         </div>
      </div>
    </div>
  </div>
</div>
<% end %>
