<!-- Below code uses bootstrap SB Admin 2 admin theme -->
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Sources</h1>
    </div>
  </div>
  <% if user_signed_in? %>
    <div class="row">
        <div class="col-md-10"></div>
        <div class="col-md-2">
            <%= link_to 'New Source', new_source_path, class: 'btn btn-outline btn-primary' %>
        </div>
        <hr size="100">
    </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading"> Available Sources </div>
        <div class="panel-body">
          <table width="100%" class="table table-striped table-bordered table-hover" id="order_ins">
            <thead>
              <tr>
                <th>Source name</th>
                        <th>Source category</th>
                        <th>Company</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Contact number</th>
                <th colspan="2" style="text-align:center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @sources.each do |source| %>
                     <tr class="odd gradeX">
                        <td><%= source.source_name %></td>
                        <td><%= source.source_category %></td>
                        <td><%= source.company.company_name %></td>
                        <td><%= source.address %></td>
                        <td><%= source.email %></td>
                        <td><%= source.contact_number %></td>
                <td><%= link_to 'Edit', edit_source_path(source), class: 'btn btn-outline btn-primary btn-xs' %></td>
                <td><%= link_to 'Destroy', source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
         </div>
      </div>
    </div>
  </div>
</div>
<% end %>
