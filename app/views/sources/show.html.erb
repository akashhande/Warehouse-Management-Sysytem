<!-- Below code uses bootstrap SB Admin 2 admin theme -->
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Sources</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
          Basic Form Elements
        </div>
        <div class="panel-body">
          <form role="form">
             <div class="form-group col-sm-6">
              <strong>Source name:</strong>
                <%= @source.source_name %>
            </div>
            
            <div class="form-group col-sm-6">
             <strong>Source category:</strong>
               <%= @source.source_category %>
            </div>
            
            <div class="form-group col-sm-6">
              <strong>Address:</strong>
                <%= @source.address %>
            </div>
            
            <div class="form-group col-sm-6">
              <strong>Email:</strong>
                  <%= @source.email %>
            </div>
            
            <div class="form-group col-sm-6">
              <strong>Contact number:</strong>
                <%= @source.contact_number %>
            </div>
            
          </form> 
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-md-10"></div>
            <div class="col-md-2">
              <%= link_to 'Back', sources_path, class: 'btn btn-outline btn-default' %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
